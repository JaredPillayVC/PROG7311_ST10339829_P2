@model PROG7311_ST10339829_P2.Models.ProductListViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "View & Filter Products";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="ViewProducts" method="get" class="row g-3 mb-4">
    <div class="col-md-3">
        <label asp-for="Filter.FarmerId" class="form-label">Farmer</label>
        <select asp-for="Filter.FarmerId" asp-items="ViewBag.FarmerList" class="form-select">
            <option value="">All</option>
        </select>
    </div>
    <div class="col-md-3">
        <label asp-for="Filter.Category" class="form-label">Category</label>
        <select asp-for="Filter.Category" asp-items="ViewBag.CategoryList" class="form-select">
            <option value="">All</option>
        </select>
    </div>
    <div class="col-md-2">
        <label asp-for="Filter.StartDate" class="form-label">From</label>
        <input asp-for="Filter.StartDate" type="date" class="form-control" />
    </div>
    <div class="col-md-2">
        <label asp-for="Filter.EndDate" class="form-label">To</label>
        <input asp-for="Filter.EndDate" type="date" class="form-control" />
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
    </div>
</form>

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>Farmer</th>
            <th>Product</th>
            <th>Category</th>
            <th>Production Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Products)
        {
            <tr>
                <td>@p.FarmerName</td>
                <td>@p.Name</td>
                <td>@p.Category</td>
                <td>@p.ProductionDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
